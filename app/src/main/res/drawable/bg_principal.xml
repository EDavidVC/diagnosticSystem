                <corners android:radius="4dp" />
                <padding android:bottom="0px" />
                <solid android:color="#09000000" />
            </shape>
        </rotate>
    </item>
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:bottom="0px" />
            <solid android:color="#09000000" />
        </shape>
    </item>

