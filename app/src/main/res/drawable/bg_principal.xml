            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="4dp" />
                <padding
                    android:bottom="0px"
                    android:left="0px"
                    android:right="0px" />
                <solid android:color="#777777" />
            </shape>
        </rotate>
    </item>
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding
                android:bottom="0px"
                android:left="0px"
                android:right="0px" />
            <solid android:color="#5C878282" />
        </shape>
    </item>

    <!--===============-->


    <!--ForeGround-->

    <item>
        <rotate
            android:fromDegrees="-20"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#222121" />
            </shape>
        </rotate>
    </item>
    <item android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#4A0E0B01" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>