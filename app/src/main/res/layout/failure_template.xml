<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    android:elevation="2dp"
    app:cardBackgroundColor="#EAEDED"
    app:contentPadding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bg_failure"
        android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:id="@+id/failure_key"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bree_serif"
            android:layout_marginBottom="10dp"
            android:text="DETALLES:"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/failure_abstract"
            android:text=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/failure_image"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Soluciones Encontradas:"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#008A39"
                    android:fontFamily="@font/bree_serif"
                    android:gravity="right"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:id="@+id/failure_solutions_count"
                    android:layout_marginBottom="10dp"
                    android:textSize="25dp"
                    android:text="0"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>